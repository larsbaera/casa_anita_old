        <section class="section-booking" id="booking">
            <form method="POST" action="send">
                <div class="form-group">
                    <h1 class="heading">Booking and Contact</h1>
                    <p class="info-text__header">Send us a booking request on mail via this booking form and we will get back to you as quickly as we
                        can to plan and confirm your stay with us.</p>
                    <div class="controls">
                        <label for="name">
                            <i class="fas fa-user"></i>&nbsp;&nbsp;Name</label>
                        <input type="text" name="name" id="name" placeholder="Name..." required>

                    </div>
                    <div class="controls">
                        <label for="email">
                            <i class="fa fa-envelope"></i>&nbsp;&nbsp;E-Mail</label>
                        <input type="email" name="email" id="email" placeholder="E-Mail..." required>
                    </div>

                    <div class="controls">
                        <label for="phone">
                            <i class="fa fa-phone"></i>&nbsp;&nbsp;Phone</label>
                        <input type="tel" name="phone" id="phone" placeholder="Phone Number..." required>
                    </div>

                    <div class="grid">
                        <div>
                            <div class="controls">
                                <label for="street">
                                    <i class="fa fa-home"></i>&nbsp;&nbsp;Street</label>
                                <input type="text" name="street" id="street" placeholder="Street Address" required>
                            </div>
                        </div>
                    </div>

                    <div class="grid">
                        <div class="col-2-3">
                            <div class="controls">
                                <label for="city">
                                    <i class="fa fa-map-signs"></i>&nbsp;&nbsp;City</label>
                                <input type="text" name="city" id="city" placeholder="City..." required>
                            </div>
                        </div>
                        <div class="col-1-3">
                            <div class="controls">
                                <label for="postCode">
                                    <i class="fas fa-sort-numeric-down"></i>&nbsp;&nbsp;Zip Code</label>
                                <input type="text" name="postCode" id="postCode" placeholder="Postal Code" required>
                            </div>
                        </div>
                    </div>
                    <div class="controls">
                        <label for="country">
                            <i class="fa fa-globe"></i>&nbsp;&nbsp;Country</label>
                        <% include ./partials/countrySelect %>
                    </div>
                </div>
                <div class="form-group">
                    <h2 class="heading">Details</h2>
                    <div class="grid">
                        <div class="col-1-2 col-1-2-sm">
                            <div class="controls">
                                <label for="arrive" class="label-date">
                                    <i class="fa fa-calendar"></i>&nbsp;&nbsp;Arrival</label>
                                <input type="date" id="arrive" name="arrive" required>
                            </div>
                        </div>
                        <div class="col-1-2 col-1-2-sm">
                            <div class="controls">
                                <label for="depart" class="label-date">
                                    <i class="fa fa-calendar"></i>&nbsp;&nbsp;Departure</label>
                                <input type="date" id="depart" name="depart" / required>
                            </div>
                        </div>
                    </div>


                    <div class="grid">
                        <div class="col-1-2 col-1-2-sm">
                            <div class="controls">
                                <label for="numPeople">
                                    <i class="fa fa-male"></i>&nbsp;&nbsp;# People</label>
                                <i class="fa fa-sort"></i>
                                <select name="numPeople">
                                    <option value="1">1</option>
                                    <option value="2" selected>2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="X">If more than 6, please specify
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="col-1-2 col-1-2-sm">
                            <div class="controls">
                                <label for="AppReq">
                                    <i class="fa fa-bed"></i>&nbsp;&nbsp;Requested Apartment</label>
                                <i class="fa fa-sort"></i>
                                <select name="AppReq">
                                    <option value="App1" selected>Apartment 1</option>
                                    <option value="App3">Apartment 3</option>
                                    <option value="App4">Apartment 4</option>
                                    <option value="App5">Apartment 5</option>
                                    <option value="App6">Apartment 6</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="grid">
                        <div class="controls">
                            <p class="info-text">Please describe if you have any special needs or requirements:</p>
                            <label for="comments">
                                <i class="fa fa-comments"></i>&nbsp;&nbsp;Comments</label>
                            <textarea name="comments" id="comments" placeholder="Add a comment..."></textarea>
                        </div>
                        <button type="submit" value="Submit" class="col-1-4">Submit</button>
                    </div>
                </div>
                <!-- /.form-group -->
            </form>
